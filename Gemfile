source 'https://rubygems.org'
ruby '3.1.2'

group :test do
  gem 'rake'       # Used for task execution.
  gem 'minitest'  # Simple test framework.
  gem 'rack-test' # Test for rack.
  gem 'simplecov', :require => false, :group => :test   # A simple way to generate statistics about your tests coverage.
end
